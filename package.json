{
  "name": "ipfs-editor-vscode",
  "version": "0.1.1",
  "description": "IPFS Editor for VSCode",
  "author": "Gerald <gera2ld@live.com>",
  "license": "MIT",
  "icon": "assets/ipfs.png",
  "displayName": "IPFS Editor",
  "publisher": "gera2ld",
  "engines": {
    "vscode": "^1.58.0"
  },
  "scripts": {
    "ci": "run-s lint",
    "lint": "eslint --ext .ts,tsx src",
    "dev": "rollup -wc rollup.conf.js",
    "clean": "del-cli dist types",
    "build:js": "cross-env NODE_ENV=production rollup -c rollup.conf.js",
    "build": "run-s ci clean build:js",
    "prepare": "husky install"
  },
  "main": "dist/index.node.js",
  "browser": "dist/index.browser.js",
  "repository": "https://github.com/gera2ld/ipfs-editor-vscode",
  "files": [
    "dist",
    "types"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "typings": "types/index.d.ts",
  "activationEvents": [
    "onFileSystem:ipfs",
    "onCommand:ipfs.import",
    "onCommand:ipfs.open"
  ],
  "contributes": {
    "submenus": [
      {
        "id": "ipfs/context",
        "label": "IPFS"
      }
    ],
    "commands": [
      {
        "command": "ipfs.import",
        "title": "Import from IPFS Path",
        "category": "IPFS"
      },
      {
        "command": "ipfs.open",
        "title": "Open IPFS",
        "category": "IPFS"
      },
      {
        "command": "ipfs.copyCid",
        "title": "Copy IPFS CID",
        "category": "IPFS"
      },
      {
        "command": "ipfs.copyUrl",
        "title": "Copy IPFS URL",
        "category": "IPFS"
      },
      {
        "command": "ipfs.uploadToWeb3Storage",
        "title": "Upload to Web3.Storage",
        "category": "IPFS"
      },
      {
        "command": "ipfs.publish",
        "title": "Publish this node",
        "category": "IPFS"
      },
      {
        "command": "ipfs.publishUnder",
        "title": "Publish all under this node",
        "category": "IPFS"
      },
      {
        "command": "ipfs.uploadAndPublishUnder",
        "title": "Upload and publish all",
        "category": "IPFS"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "ipfs.open"
        },
        {
          "command": "ipfs.import"
        }
      ],
      "explorer/context": [
        {
          "submenu": "ipfs/context",
          "when": "resourceScheme == ipfs"
        }
      ],
      "ipfs/context": [
        {
          "command": "ipfs.copyCid",
          "group": "copypath"
        },
        {
          "command": "ipfs.copyUrl",
          "group": "copypath"
        },
        {
          "command": "ipfs.uploadToWeb3Storage",
          "group": "publish"
        },
        {
          "command": "ipfs.publish",
          "group": "publish"
        },
        {
          "command": "ipfs.publishUnder",
          "group": "publish"
        },
        {
          "command": "ipfs.uploadAndPublishUnder",
          "group": "publish"
        }
      ]
    },
    "configuration": {
      "title": "IPFS Editor",
      "properties": {
        "ipfs.endpoint": {
          "type": "string",
          "default": "http://127.0.0.1:5001",
          "markdownDescription": "Endpoint of the IPFS node"
        },
        "ipfs.publishConfig": {
          "type": "string",
          "default": "{}",
          "markdownDescription": "Configuration for uploading to Web3Storage, publishing to IPFS, and updating DNSLink",
          "editPresentation": "multilineText"
        }
      }
    }
  },
  "dependencies": {
    "@babel/runtime": "^7.18.9",
    "ipfs-core": "^0.15.4",
    "node-fetch": "^2.6.7",
    "tldjs": "^2.3.1",
    "vscode-uri": "^3.0.3"
  },
  "devDependencies": {
    "@gera2ld/plaid": "~2.5.6",
    "@gera2ld/plaid-common-ts": "~2.5.1",
    "@gera2ld/plaid-rollup": "~2.5.6",
    "@types/vscode": "~1.58.0",
    "del-cli": "^5.0.0",
    "husky": "^8.0.1"
  }
}
